![LM35 Temperature Sensor](../src/lm35.png)
Code :
int sensorValue = 0;

void setup() {
    pinMode(A0, INPUT);
    Serial.begin(9600);
}

void loop() {
    sensorValue = ((analogRead(A0) / 1023.00)*100);
    Serial.println("Temperature");
    Serial.println(sensorValue);
  
    delay(1000);
    
    if (sensorValue > 15) {
        digitalWrite(13, HIGH);
        delay(10);
    } else {
        digitalWrite(13, LOW);
        delay(10);
    }
}
